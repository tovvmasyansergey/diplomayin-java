<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="2-create-chat-rooms-table" author="system">
        <createTable tableName="chat_rooms">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="user1_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user2_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="chat_rooms"
                baseColumnNames="user1_id"
                constraintName="fk_chat_rooms_user1"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
                
        <addForeignKeyConstraint
                baseTableName="chat_rooms"
                baseColumnNames="user2_id"
                constraintName="fk_chat_rooms_user2"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2-create-messages-table" author="system">
        <createTable tableName="messages">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="content" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="sender_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="receiver_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="chat_room_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="is_admin_message" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_read" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="message_type" type="VARCHAR(20)" defaultValue="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="messages"
                baseColumnNames="sender_id"
                constraintName="fk_messages_sender"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
                
        <addForeignKeyConstraint
                baseTableName="messages"
                baseColumnNames="receiver_id"
                constraintName="fk_messages_receiver"
                referencedTableName="app_user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
                
        <addForeignKeyConstraint
                baseTableName="messages"
                baseColumnNames="chat_room_id"
                constraintName="fk_messages_chat_room"
                referencedTableName="chat_rooms"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="add-indexes-chat" author="system">
        <createIndex tableName="chat_rooms" indexName="idx_chat_rooms_user1">
            <column name="user1_id"/>
        </createIndex>
        
        <createIndex tableName="chat_rooms" indexName="idx_chat_rooms_user2">
            <column name="user2_id"/>
        </createIndex>
        
        <createIndex tableName="messages" indexName="idx_messages_sender">
            <column name="sender_id"/>
        </createIndex>
        
        <createIndex tableName="messages" indexName="idx_messages_receiver">
            <column name="receiver_id"/>
        </createIndex>
        
        <createIndex tableName="messages" indexName="idx_messages_chat_room">
            <column name="chat_room_id"/>
        </createIndex>
        
        <createIndex tableName="messages" indexName="idx_messages_created_at">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

    <changeSet id="remove-is-admin-message-column" author="system">
        <dropColumn tableName="messages" columnName="is_admin_message"/>
    </changeSet>

</databaseChangeLog>
